<div class="filter_select">
	{# <p class="filter_label" data-filter-select-block>{{filter_item.name}}</p> #}
	<div class="filter_select_block" data-type="{{label}}" data-filter-select-block>
		{% set firstItem = filter_item.items|first %}
		<div class="filter_select_current" data-filter-select-current data-placeholder="{{filter_item.name}}" data-active-placeholder="{{filter_item.name}}">
				{% if filter_item.active is not null %}

					{% if filter_item.active|length > 1 %}
						<p>{{filter_item.name}} ({{filter_item.active|length}})</p>
					{% else %}
						<p>{{filter_item.items[filter_item.active|keys|first]}}</p>
					{% endif %}

				{% else %}
					<p>{{filter_item.name}}</p>
				{% endif %}
				<div class="filter_select_close_button"></div>
		</div>

		<div class="filter_select_reset_button" data-filter-reset></div>

		<div class="filter_select_list">
			{% for key,value in filter_item.items %}
				<div class="filter_select_item {{filter_item.active[key] is defined ? '_active':''}}" data-value="{{key}}" data-filter-select-item><p>{{value}}</p></div>
			{% endfor %}

			<div class="filter_buttons">
				<div class="filter_submit">
					<div class="filter_submit_button _button" data-filter-button>Применить</div>
				</div>
				<div class="filter_reset">
					<div class="filter_reset_button" data-filter-reset>Сбросить</div>
				</div>
			</div>

		</div>

		<div class="filter_buttons _mobile">
			<div class="filter_submit">
				<div class="filter_submit_button _button" data-filter-button>Применить</div>
			</div>
			<div class="filter_reset">
				<div class="filter_reset_button" data-filter-reset>Сбросить</div>
			</div>
		</div>
	</div>
</div>





